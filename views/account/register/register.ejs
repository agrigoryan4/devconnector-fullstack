<%- include('../../partials/head', { included: { developers: true, register: true, login: true } }) %>
      <section class="container">
        <% if(toBeVerified) { %>
          <div class="alert alert-warning">
            Verify your account with the link sent to your email to access your account
          </div>
        <% } %>
        <% if(validationError) { %>
          <div class="alert alert-danger">
            Validation error
          </div>
        <% } %>
        <h1 class="large text-primary">
            Sign Up
        </h1>
        <p class="lead"><i class="fas fa-user"></i> Create Your Account</p>
        <form action="/account/register" method="POST" class=form>
            <div class="form-group">
                <input type="text" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input type="email" name="email" placeholder="Email Address">
                <small class="form-text">
                    You can use a Gravatar email
                </small>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" minlength="6">
            </div>
            <div class="form-group">
                <input type="password" name="passwordconfirmed" placeholder="Confirm Password" minlength="6">
            </div>
            <input type="submit" value="Register" class="btn btn-primary">
        </form>
        <p class="my-1">
            Already have an account? <a href="/account/login">Sign In</a>
        </p>
      </section>
<%- include('../../partials/bottom') %>