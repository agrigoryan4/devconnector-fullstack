<%- include('../../partials/head', { included: { developers: true, register: true, login: true } }) %>
      <section class="container">
        <!-- Alert -->
        <% if(options?.invalidCredentials) { %>
          <div class="alert alert-danger">
              Invalid Credentials
          </div>
        <% } %>
        <h1 class="large text-primary">
            Sign In
        </h1>
        <p class="lead"><i class="fas fa-user"></i> Sign into your account</p>
        <form action="/account/login" method="POST" class=form>
            <div class="form-group">
                <input type="email" name="email" placeholder="Email Address">
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password" minlength="6">
            </div>
            <input type="submit" value="Login" class="btn btn-primary">
        </form>
        <p class="my-1">
            Don't have an account? <a href="/account/register">Sign Up</a>
        </p>
      </section>
<%- include('../../partials/bottom') %>